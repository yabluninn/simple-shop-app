<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_gravity="center"
    android:background="@drawable/item_element_background"
    >


    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Item name"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/sofa" />

    <TextView
        android:id="@+id/item_short_descr"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Short description"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:id="@+id/item_long_descr"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Long description"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Price: 100 $"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/item_more_button"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="More"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/app_base_dark"
        android:background="@drawable/custom_light_button"
        />
</LinearLayout>